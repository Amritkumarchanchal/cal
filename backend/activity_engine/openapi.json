            "name": "studentId",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "courseInstanceId",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "videoId",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Video metrics retrieved successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "studentId": {
                      "type": "string"
                    },
                    "courseInstanceId": {
                      "type": "string"
                    },
                    "videoId": {
                      "type": "string"
                    },
                    "replays": {
                      "type": "integer"
                    }
                  }
                },
                "example": {
                  "studentId": "stu123",
                  "courseInstanceId": "courseABC",
                  "videoId": "video789",
                  "replays": 5
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Update video metrics for a student",
        "tags": ["Metrics"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [
                  "studentId",
                  "courseInstanceId",
                  "videoId",
                  "replays"
                ],
                "properties": {
                  "studentId": {
                    "type": "string"
                  },
                  "courseInstanceId": {
                    "type": "string"
                  },
                  "videoId": {
                    "type": "string"
                  },
                  "replays": {
                    "type": "integer"
                  }
                },
                "example": {
                  "studentId": "stu123",
                  "courseInstanceId": "courseABC",
                  "videoId": "video789",
                  "replays": 6
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Metrics updated",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string"
                    },
                    "data": {
                      "type": "object"
                    }
                  }
                },
                "example": {
                  "status": "updated",
                  "data": {
                    "studentId": "stu123",
                    "courseInstanceId": "courseABC",
                    "videoId": "video789",
                    "replays": 6
                  }
                }
              }
            }
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/metrics/violations": {
      "get": {
        "summary": "Get recorded violations",
        "tags": ["Metrics"],
        "parameters": [
          {
            "name": "studentId",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "contentTypeId",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Violations retrieved successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/StudentViolationMetrics"
                  }
                },
                "example": [
                  {
                    "id": 501,
                    "studentId": "stu123",
                    "contentType": "VIDEO",
                    "contentTypeId": "video789",
                    "violationType": "OUT_OF_FRAME",
                    "createdAt": "2024-12-12T10:00:00Z"
                  }
                ]
              }
            }
          }
        }
      },
      "post": {
        "summary": "Record a new violation",
        "tags": ["Metrics"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [
                  "studentId",
                  "contentType",
                  "contentTypeId",
                  "violationType"
                ],
                "properties": {
                  "studentId": {
                    "type": "string"
                  },
                  "contentType": {
                    "type": "string",
                    "enum": ["VIDEO", "ARTICLE", "ASSESSMENT"]
                  },
                  "contentTypeId": {
                    "type": "string"
                  },
                  "violationType": {
                    "type": "string"
                  }
                },
                "example": {
                  "studentId": "stu123",
                  "contentType": "VIDEO",
                  "contentTypeId": "video789",
                  "violationType": "OUT_OF_FRAME"
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Violation recorded",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string"
                    },
                    "violationId": {
                      "type": "integer"
                    }
                  }
                },
                "example": {
                  "status": "recorded",
                  "violationId": 501
                }
              }
            }
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/course-progress/update-section-item-progress": {
      "post": {
        "summary": "Update progress for a section item",
        "tags": ["CourseProgress"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["courseInstanceId", "studentId", "sectionItemId"],
                "properties": {
                  "courseInstanceId": {
                    "type": "string",
                    "description": "The ID of the course instance"
                  },
                  "studentId": {
                    "type": "string",
                    "description": "The ID of the student"
                  },
                  "sectionItemId": {
                    "type": "string",
                    "description": "The ID of the section item"
                  },
                  "cascade": {
                    "type": "boolean",
                    "description": "Whether to cascade updates"
                  }
                },
                "example": {
                  "courseInstanceId": "courseABC",
                  "studentId": "stu123",
                  "sectionItemId": "item456",
                  "cascade": true
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Updated progress successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "course": {
                      "type": "string",
                      "nullable": true
                    },
                    "modules": {
                      "type": "array",
                      "items": {
                        "type": "string"
                      },
                      "nullable": true
                    },
                    "sections": {
                      "type": "array",
                      "items": {
                        "type": "string"
                      },
                      "nullable": true
                    },
                    "sectionItems": {
                      "type": "array",
                      "items": {
                        "type": "string"
                      },
                      "nullable": true
                    }
                  }
                },
                "example": {
                  "course": null,
                  "modules": null,
                  "sections": ["section1"],
                  "sectionItems": ["item456", "item457"]
                }
              }
            }
          },
          "400": {
            "description": "Invalid request data"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/course-progress/initialize-progress": {
      "post": {
        "summary": "Initialize course progress for all students",
        "tags": ["CourseProgress"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["courseInstanceId", "studentIds", "modules"],
                "properties": {
                  "courseInstanceId": {
                    "type": "string",
                    "description": "Unique ID for the course instance"
                  },
                  "studentIds": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    },
                    "description": "List of student IDs"
                  },
                  "modules": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "moduleId": {
                          "type": "string"
                        },
                        "sequence": {
                          "type": "integer"
                        },
                        "sections": {
                          "type": "array",
                          "items": {
                            "type": "object",
                            "properties": {
                              "sectionId": {
                                "type": "string"
                              },
                              "sequence": {
                                "type": "integer"
                              },
                              "sectionItems": {
                                "type": "array",
                                "items": {
                                  "type": "object",
                                  "properties": {
                                    "sectionItemId": {
                                      "type": "string"
                                    },
                                    "sequence": {
                                      "type": "integer"
                                    }
                                  }
                                }
                              }
                            }
                          }
                        }
                      }
                    }
                  }
                },
                "example": {
                  "courseInstanceId": "courseXYZ",
                  "studentIds": ["stu1", "stu2"],
                  "modules": [
                    {
                      "moduleId": "mod1",
                      "sequence": 1,
                      "sections": [
                        {
                          "sectionId": "sec1",
                          "sequence": 1,
                          "sectionItems": [
                            {
                              "sectionItemId": "item1",
                              "sequence": 1
                            }
                          ]
                        }
                      ]
                    }
                  ]
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Progress initialized successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    },
                    "studentCount": {
                      "type": "integer"
                    },
                    "totalRecords": {
                      "type": "integer"
                    }
                  }
                },
                "example": {
                  "message": "Progress initialization complete.",
                  "studentCount": 2,
                  "totalRecords": 10
                }
              }
            }
          },
          "400": {
            "description": "Invalid request"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
