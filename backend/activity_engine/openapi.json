              "type": "string"
            },
            "value": {
              "type": "string"
            },
            "assessmentAttemptId": {
              "type": "integer"
            },
            "createdAt": {
              "type": "string",
              "format": "date-time"
            },
            "updatedAt": {
              "type": "string",
              "format": "date-time"
            }
          }
        },
        "StudentDescriptiveAnswer": {
          "type": "object",
          "properties": {
            "id": {
              "type": "integer"
            },
            "questionId": {
              "type": "string"
            },
            "studentId": {
              "type": "string"
            },
